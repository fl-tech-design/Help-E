<ButtonYellow@Button>:
    canvas.before:
        Color:
            rgba: yellow2 if self.state == 'normal' else yellow1
        Line:
            width: 2
            rounded_rectangle: (self.x, self.y, self.width, self.height, 25)
    color: yellow1 if self.state == 'normal' else yellow2
    background_color: 0,0,0,0
    font_size: self.height/2


<ButtonHelp@Button>:
    canvas.before:
        Color:
            rgba: app.a_conf.colors["but_down"] if self.state == 'normal' else app.a_conf.colors["but_norm"]
        Line:
            width: 2
            ellipse: (self.x, self.y, self.width, self.height)
    markup: True
    text: "[b]?[/b]"
    background_color: 0,0,0,0
    color: app.a_conf.colors["font_light"] if self.state == 'normal' else app.a_conf.colors["font_dark"]

<LabelTitel@Label>:
    font_name: "app_fonts/cmunobx.ttf"
    font_size: self.height/1.2
    color: yellow1
    text: "Help-E"

